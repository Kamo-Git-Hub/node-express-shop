  
  <div class="auth">

<div class="row">
    <div class="col s6 offset-s3">
      <ul class="tabs">
        <li class="tab col s6"><a class="active"  href="#login">Login</a></li>
        <li class="tab col s6"><a href="#register">Register</a></li>

      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">

      {{#if logError}}
      {{logError}}
      {{/if}}


<form action="/auth/login" method="post" >

  <div class="input-field col s12">
          <input id="email" type="email" class="validate" name="email" required>
          <label for="email">Email</label>
          <span class="helper-text" data-error="wrong" data-success="right">write email</span>
        </div>

    <div class="input-field col s12">
          <input id="password" type="password" class="validate" name="password" required>
          <label for="password">Password</label>
          <span class="helper-text" data-error="wrong" data-success="right">write password</span>
        </div>
            <p>
              <a href="/auth/reset">забыли пароль?</a>
            </p>
        <button class="btn" type="submit">Login</button>


</form>


    </div>
    <div id="register" class="col s6 offset-s3">
           {{#if error}}
      {{error}}
      {{/if}}
        <form action="/auth/register" method="post" novalidate>

  <div class="input-field col s12">
          <input id="remail" type="email" class="validate" name="email" required>
          <label for="remail">Email</label>
          <span class="helper-text" data-error="wrong" data-success="right">write email</span>
        </div>

    <div class="input-field col s12">
          <input id="rpassword" type="password" class="validate" name="password" required>
          <label for="rpassword">Password</label>
          <span class="helper-text" data-error="wrong" data-success="right">write password</span>
        </div>

        <div class="input-field col s12">
          <input id="confirm" type="password" class="validate" name="confirm" required>
          <label for="confirm">Password</label>
          <span class="helper-text" data-error="wrong" data-success="right">send password</span>
        </div> 

         <div class="input-field col s12">
          <input id="name" type="text" class="validate" name="name" required>
          <label for="name">Password</label>
          <span class="helper-text" data-error="wrong" data-success="right">name</span>
        </div>

        <button class="btn" type="submit">register</button>


</form>


    </div>
    
  </div>

 
  </div>


  